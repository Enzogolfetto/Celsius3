<div class="span6">
    <div class="well">
        <h2 class="pull-left">{{ 'Orders'|trans }}</h2>
        <div class="pull-right">
            {% from "CelsiusCelsius3Bundle:Macro:admin.html.twig" import admin_search as search %}
            {{ search(path('administration_search'), '#') }}
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="span3">
                <ul class="nav nav-list">
                    <li class="nav-header">
                        {{ 'Filters'|trans }}
                    </li>
                    <li>
                        <a href="{{ path('admin_order', { 'state[]': 'created' }) }}">{{ 'Created'|trans }} ({{ orderCount['created'] }})</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_order', { 'state[]': 'searched' }) }}">{{ 'Being searched'|trans }} ({{ orderCount['searched'] }})</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_order', { 'state[]': 'requested' }) }}">{{ 'Requested'|trans }} ({{ orderCount['requested'] }})</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_order', { 'state[]': 'received' }) }}">{{ 'Received'|trans }} ({{ orderCount['received'] }})</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_order')~'?state[]=delivered&state[]=canceled&state[]=annuled' }}">{{ 'Ended'|trans }} ({{ orderCount['delivered']+orderCount['canceled']+orderCount['annuled'] }})</a>
                    </li>
                </ul>
            </div>
            <div class="span2">
                <ul class="nav nav-list">
                    <li class="nav-header">
                        {{ 'Operations'|trans }}
                    </li>
                    <li>
                        <a href="{{ path('admin_order_new') }}"><i class="icon-plus"></i> {{ 'Add'|trans }}</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_order') }}"><i class="icon-list"></i> {{ 'List'|trans }}</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>