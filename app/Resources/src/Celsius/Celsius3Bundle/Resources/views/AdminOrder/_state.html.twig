<a class="{{ order.hasState(state)?'':'disabled' }} {{ hasPrevious?'pointer':'' }}" id="{{ state ~ order.id }}" data-placement="top"
   data-title="State: {{ state|capitalize }}">
    {{ state|capitalize|trans }}
</a>
{% if hasPrevious %}
<script type="text/javascript">    
    $(document).ready(function () {
        $('#{{ state ~ order.id }}:not(.disabled)').popover({
            content: '<p>{{ 'Date'|trans }}: {{ order.hasState(state)?order.getState(state).date|localizeddate():'' }}</p>'
        });
        $('#{{ state ~ order.id }}.disabled').popover({
            content: ''
                    {% for eventKey, event in events %}
                        + '<p><a href="{{ path('admin_order_event', { 'id': order.id, 'event': eventKey }) }}">{{ eventKey|capitalize|trans }}</a></p>'
                    {% endfor %}
        });
    });
</script>
{% endif %}