{% extends 'Celsius3CoreBundle:Layout:layout.html.twig' %}

{% block title %}
{{ 'Login'|trans }}
{% endblock %}

{% block content %}
<form action="{{ path("fos_user_security_check", { 'url': app.request.get('url') }) }}" method="post" class="form-horizontal well">
    <ul>
        {% if error %}
            <li>{{ error|trans }}</li>
        {% endif %}
    </ul>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    <div class="control-group">
        <label class="control-label" for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
        <div class="controls">
            <input type="text" id="username" name="_username" value="{{ last_username }}" />
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
        <div class="controls">
            <input type="password" id="password" name="_password" />
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
        <div class="controls">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
            <button type="submit" class="btn btn-primary"><i class="icon-ok"></i> {{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}</button>
            &nbsp;<a href="{{ path("fos_user_resetting_request", { 'url': app.request.get('url') }) }}">{{ 'Forgot your password?'|trans }}</a>
        </div>
    </div>
</form>
{% endblock content %}
