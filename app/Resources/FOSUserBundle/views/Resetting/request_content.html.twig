<form action="{{ path('fos_user_resetting_send_email', { 'url': app.request.get('url') }) }}" method="POST" class="fos_user_resetting_request form-horizontal well">
    <div>
        {% if invalid_username is defined %}
            <p>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}, 'FOSUserBundle') }}</p>
        {% endif %}
        <div class="control-group">
            <label class="control-label" for="username">{{ 'resetting.request.username'|trans({}, 'FOSUserBundle') }}</label>
            <div class="controls">
                <input type="text" id="username" name="username" />
            </div>
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
            <button type="submit" class="btn btn-primary"><i class="icon-ok"></i> {{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}</button>
        </div>
    </div>
</form>
