<h1>Institution list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Abbreviation</th>
            <th>Website</th>
            <th>Address</th>
            <th>Users</th>
            <th>Institutions</th>
            <th>Parent</th>
            <th>Location</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for document in documents %}
        <tr>
            <td><a href="{{ path('institution_show', { 'id': document.id }) }}">{{ document.id }}</a></td>
            <td>{{ document.name }}</td>
            <td>{{ document.abbreviation }}</td>
            <td>{{ document.website }}</td>
            <td>{{ document.address }}</td>
            <td>{{ document.users }}</td>
            <td>{{ document.institutions }}</td>
            <td>{{ document.parent }}</td>
            <td>{{ document.location }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('institution_show', { 'id': document.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('institution_edit', { 'id': document.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('institution_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
