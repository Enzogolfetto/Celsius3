<table class="table table-striped table-bordered table-condensed record_properties">
    <tbody>
        <tr>
            <th>{{ 'Name'|trans }}</th>
            <td>{{ document.name }}</td>
        </tr>
        <tr>
            <th>{{ 'Surname'|trans }}</th>
            <td>{{ document.surname }}</td>
        </tr>
        <tr>
            <th>{{ 'Birthdate'|trans }}</th>
            <td>{{ document.birthdate|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>{{ 'Username'|trans }}</th>
            <td>{{ document.username }}</td>
        </tr>
        <tr>
            <th>{{ 'Email'|trans }}</th>
            <td>{{ document.email }}</td>
        </tr>
        <tr>
            <th>{{ 'Address'|trans }}</th>
            <td>{{ document.address }}</td>
        </tr>
    </tbody>
</table>