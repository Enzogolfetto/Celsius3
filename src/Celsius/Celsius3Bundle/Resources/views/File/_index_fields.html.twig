<table class="table table-striped table-bordered table-condensed records_list">
    <thead>
        <tr>
            <th>{{ pagination.sortable('Name'|trans, 'name')|raw }}</th>
            <th>{{ pagination.sortable('Comments'|trans, 'comments')|raw }}</th>
            <th>{{ pagination.sortable('Uploaded'|trans, 'uploaded')|raw }}</th>
            <th>{{ 'Actions'|trans }}</th>
        </tr>
    </thead>
    <tbody>
    {% for document in pagination %}
        <tr>
            <td>{{ document.name }}</td>
            <td>{{ document.comments }}</td>
            <td>{% if document.uploaded %}{{ document.uploaded|date('d-m-Y H:i:s') }}{% endif%}</td>
            <td>
                <ul class="unstyled">
                    <li>
                        <a href="{{ path('file_show', { 'id': document.id }) }}"><i class="icon-book"></i> {{ 'Show'|trans }}</a>
                    </li>
                    <li>
                        <a href="{{ path('file_edit', { 'id': document.id }) }}"><i class="icon-pencil"></i> {{ 'Edit'|trans }}</a>
                    </li>
                    <li>
                        <a href="{{ path('file_download', { 'id': document.id }) }}"><i class="icon-download-alt"></i> {{ 'Download'|trans }}</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>