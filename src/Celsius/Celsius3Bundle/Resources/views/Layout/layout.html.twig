<!DOCTYPE html>
<html lang="en">
    <head>
        <meta http-equiv="content-type" content="text/html;charset=utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}{% endblock %} - Celsius3</title>
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
        {% block stylesheets %}
        <link href="{{ asset('bundles/celsiuscelsius3/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css" />
        <style type="text/css">
            body {
                padding-top: 60px;
                padding-bottom: 40px;
            }
            .footer {
                border-top: 1px solid #E5E5E5;
                margin-top: 45px;
                padding: 35px 10px 10px;
            }
            li.span4:nth-child(3n+1) {
                margin-left:0;
            }
            li.span12:nth-child(n+1) {
                margin-left:0;
            }
            #user_panel {
                margin-top: -15px;
            }
            .admin_search {
                margin-bottom: -20px;
            }
            .dash {
                text-align: center;
            }
        </style>
        <link href="{{ asset('bundles/celsiuscelsius3/css/bootstrap-responsive.min.css') }}" rel="stylesheet" type="text/css" />
        <link href="{{ asset('bundles/celsiuscelsius3/css/smoothness/jquery-ui-1.8.21.custom.css') }}" rel="stylesheet" type="text/css" />
        {% endblock %}
    </head>
    <body>
        {% block header %}
        <div id="header">
            <div class="navbar navbar-fixed-top">
                <div class="navbar-inner">
                    <div class="container">
                        <a class="brand" href="{{ path('directory') }}">Celsius3</a>
                        <div class="nav-collapse">
                            {% block navigation_top %}
                            {{ knp_menu_render('CelsiusCelsius3Bundle:Builder:topMenu', { 'currentClass': 'active' }) }}
                            {% endblock %}
                            {{ knp_menu_render('CelsiusCelsius3Bundle:Builder:langSelectorMenu', { 'currentClass': 'active' }) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endblock %}
        <div class="container">
            <div class="row">
                <div class="span12">
                    {% block body_title %}
                    <div class="well page-header">
                        <div class="pull-left">
                            <h1>{{ 'Celsius3 Instance'|trans }}</h1>
                        </div>
                        <div class="pull-right">
                            {% include 'CelsiusCelsius3Bundle:Layout:_user_panel.html.twig' %}
                        </div>
                    </div>
                    {% endblock %}
                    {% block navigation_content %}{% endblock %}
                    {% block content %}{% endblock %}
                </div>
            </div>
            <div class="row">
                {% block footer %}
                <footer class="footer">
                    <p>&copy;PrEBi {{ date()|date('Y') }}</p>
                </footer>
                {% endblock %}
            </div>
        </div>
        {% block javascripts %}
        <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
        <script type="text/javascript" src="{{ asset('bundles/celsiuscelsius3/js/jquery-ui-1.8.21.custom.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/celsiuscelsius3/js/bootstrap.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/celsiuscelsius3/js/jquery.dotdotdot-1.5.1.js') }}"></script>
        {% include 'CelsiusCelsius3Bundle:Layout:forms.js.twig' %}
        {% include 'CelsiusCelsius3Bundle:Layout:cosmetics.js.twig' %}
        {% endblock %}
    </body>
</html>
