<!DOCTYPE html>
<html lang="en">
    <head>
        <meta http-equiv="content-type" content="text/html;charset=utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}{% endblock %} - Celsius3</title>
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
        {% block stylesheets %}
        {% stylesheets '@CelsiusCelsius3Bundle/Resources/public/css/smoothness/jquery-ui-1.8.21.custom.css'
            '@CelsiusCelsius3Bundle/Resources/public/css/bootstrap.min.css'
            '@CelsiusCelsius3Bundle/Resources/public/css/celsius3.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
        {% endblock %}
    </head>
    <body>
        {% block header %}
        <div id="header">
            <div class="navbar navbar-fixed-top">
                <div class="navbar-inner">
                    <div class="container">
                        <a class="brand" href="{{ path('directory') }}">Celsius3</a>
                        <div class="nav-collapse">
                            {% block navigation_top %}
                            {{ knp_menu_render('CelsiusCelsius3Bundle:Builder:topMenu', { 'currentClass': 'active' }) }}
                            {% endblock %}
                            {{ knp_menu_render('CelsiusCelsius3Bundle:Builder:langSelectorMenu', { 'currentClass': 'active' }) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endblock %}
        <div class="container">
            <div class="row">
                <div class="span12">
                    {% block body_title %}
                    <div class="well page-header">
                        <div class="pull-left">
                            <h1>{{ 'Celsius3 Instance'|trans }}</h1>
                        </div>
                        <div class="pull-right">
                            {% include 'CelsiusCelsius3Bundle:Layout:_user_panel.html.twig' %}
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    {% endblock %}
                    {% block navigation_content %}{% endblock %}
                    {% block content %}{% endblock %}
                </div>
            </div>
            <div class="row">
                {% block footer %}
                <footer class="footer">
                    <p>&copy;PrEBi {{ date()|date('Y') }}</p>
                </footer>
                {% endblock %}
            </div>
        </div>
        {% block javascripts %}
        {% javascripts 
            '@CelsiusCelsius3Bundle/Resources/public/js/jquery-1.8.0.min.js'
            '@CelsiusCelsius3Bundle/Resources/public/js/jquery-ui-1.8.21.custom.min.js'
            '@CelsiusCelsius3Bundle/Resources/public/js/jquery.dotdotdot-1.5.1.js'
            '@CelsiusCelsius3Bundle/Resources/public/js/bootstrap.min.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
        {% include 'CelsiusCelsius3Bundle:Layout:forms.js.twig' %}
        {% include 'CelsiusCelsius3Bundle:Layout:cosmetics.js.twig' %}
        {% endblock %}
    </body>
</html>
