<table class="table table-striped table-bordered table-condensed records_list">
    <thead>
        <tr>
            <th>{{ pagination.sortable('Code'|trans, 'code')|raw }}</th>
            <th>{{ pagination.sortable('Type'|trans, 'type')|raw }}</th>
            <th>{{ pagination.sortable('Material Data'|trans, 'materialData')|raw }}</th>
            <th>{{ pagination.sortable('Owner'|trans, 'owner')|raw }}</th>
            <th>{{ 'Actions'|trans }}</th>
        </tr>
    </thead>
    <tbody>
    {% for document in pagination %}
        <tr>
            <td>{{ document.code }}</td>
            <td>{{ document.type }}</td>
            <td>{{ document.materialData }}</td>
            <td>{{ document.owner }}</td>
            <td>
                <ul class="unstyled">
                    <li>
                        <a href="{{ path('order_show', { 'id': document.id }) }}"><i class="icon-book"></i> {{ 'Show'|trans }}</a>
                    </li>
                    <li>
                        <a href="{{ path('order_edit', { 'id': document.id }) }}"><i class="icon-pencil"></i> {{ 'Edit'|trans }}</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>