{% extends 'CelsiusCelsius3Bundle:Layout:directory_layout.html.twig' %}

{% block title %}
{{ 'Instances'|trans }}
{% endblock %}

{% block content %}
<div class="row">
    <ul class="unstyled">
        {% for instance in instances %}
        <li class="span6">
            <div class="well">
                <h3>{{ instance.name }}</h3>
                <p>
                    <a href="{{ path('public_index', { 'url': instance.url }) }}">{{ 'Visit'|trans }}</a>
                </p>
                <p>
                    {{ 'Institutions'|trans }}: "Here goes the Institution Tree"
                </p>
                <p>
                    <a href="http://{{ instance.website }}" target="_blank">{{ 'Website'|trans }}</a>
                </p>
                <p>
                    <a href="mailto:{{ instance.email }}">{{ 'Contact'|trans }}</a>
                </p>
            </div>
        </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}