<div class="sorting-group pull-right">
    <span>
        {{ 'Sort by'|trans }}: 
    </span>
    {% include 'CelsiusCelsius3Bundle:AdminBaseUser:_index_sort.html.twig' %}
</div>
<div class="clearfix"></div>
{% for user in pagination %}
<div id="id{{ user.id }}" class="accordion">
    <div class="accordion-group">
        <div class="accordion-heading">
            <a href="#collapse{{ user.id }}" data-parent="#id{{ user.id }}" data-toggle="collapse" class="accordion-toggle">
                <span>{{ user.surname }}, {{ user.name }}</span>
            </a>
            {% include 'CelsiusCelsius3Bundle:AdminBaseUser:_index_list_actions.html.twig' %}
        </div>
        <div class="accordion-body collapse" id="collapse{{ user.id }}">
            <div class="accordion-inner">
                {% include 'CelsiusCelsius3Bundle:AdminBaseUser:_show_fields.html.twig' %}
            </div>
        </div>
    </div>
</div>
{% endfor %}