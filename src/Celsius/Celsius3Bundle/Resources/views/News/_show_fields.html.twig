<table class="table table-striped table-bordered table-condensed record_properties">
    <tbody>
        <tr>
            <th>{{ 'Title'|trans }}</th>
            <td>{{ document.title }}</td>
        </tr>
        <tr>
            <th>{{ 'Text'|trans }}</th>
            <td>{{ document.text }}</td>
        </tr>
        <tr>
            <th>{{ 'Date'|trans }}</th>
            <td>{{ document.date|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>{{ 'Instance'|trans }}</th>
            <td>{{ document.instance }}</td>
        </tr>
    </tbody>
</table>