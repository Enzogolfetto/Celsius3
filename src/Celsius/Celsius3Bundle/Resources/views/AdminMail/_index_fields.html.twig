<div class="sorting-group pull-right">
    <span>
        {{ 'Sort by'|trans }}: 
    </span>
    {% include 'CelsiusCelsius3Bundle:AdminMail:_index_sort.html.twig' %}
</div>
<div class="clearfix"></div>
{% for mails in pagination %}
<div id="id{{ mails.id }}" class="accordion">
    <div class="accordion-group">
        <div class="accordion-heading">
            <a href="#collapse{{ mails.id }}" data-parent="#id{{ mails.id }}" data-toggle="collapse" class="accordion-toggle">
                <span>{{ mails.title }}</span>
                <span class="label">{{ mails.instance?'Custom'|trans:'' }}</span>
            </a>
            {% include 'CelsiusCelsius3Bundle:AdminMail:_index_list_actions.html.twig' %}  
        </div>
        <div class="accordion-body collapse" id="collapse{{ mails.id }}">
            <div class="accordion-inner">
                {% include 'CelsiusCelsius3Bundle:AdminMail:_show_fields.html.twig' %}
            </div>
        </div>
    </div>
</div>
{% endfor %}