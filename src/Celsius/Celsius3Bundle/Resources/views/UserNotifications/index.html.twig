<script type="text/javascript" src="{{ asset('bundles/celsiuscelsius3/js/notificationFlash.js') }}"></script>
<script>
$(document).ready( function(){
    $("#flash-messages").flashNotification("init");
});
</script>

<div id="flash-messages">
    {% if newMessage.templates is defined%}
        {% for flashMessage in newMessage.templates %}
            <div class="alert alert-info">
                <button class="close" data-dismiss="alert">&times;</button>
                {{ flashMessage|trans|raw|nl2br }}
            </div>    
        {% endfor %}
    {% endif %}
</div>
