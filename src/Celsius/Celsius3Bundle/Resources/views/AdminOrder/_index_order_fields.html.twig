<div class="row">
    <div class="span6">
        <dl class="dl-horizontal">
            <dt>{{ 'Code'|trans }}</dt>
            <dd>{{ order.code }}</dd>
            <dt>{{ 'Current state'|trans }}</dt>
            <dd>{{ order.currentState.type.name|capitalize }}</dd>
            <dt>{{ 'User'|trans }}</dt>
            <dd>{{ order.owner.username }}</dd>
        </dl>
        <div class="thumbnail">
            {{ render_material(order.materialData)|raw }}
        </div>
    </div>
    <div class="span2 pull-right">
        <ul class="unstyled pull-right">
            <li>
                <a href="{{ path('admin_order_show', { 'id': order.id }) }}"><i class="icon-file"></i> {{ 'Full view'|trans }}</a>
            </li>
            <li>
                <a href="{{ path('admin_order_edit', { 'id': order.id }) }}"><i class="icon-pencil"></i> {{ 'Edit'|trans }}</a>
            </li>
        </ul>
    </div>
</div>