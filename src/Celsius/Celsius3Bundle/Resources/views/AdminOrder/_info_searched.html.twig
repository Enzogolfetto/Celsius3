<div id="{{ 'info_'~state }}" class="collapse">
    <p>{{ 'Date'|trans }}: {{ order.hasState('searched')?order.getState('searched').date|localizeddate():'' }}</p>
</div>

<div id="{{ 'info_'~state~'_disabled' }}" class="collapse">
    <form id="search-form" action="{{ path('admin_order_event', { 'id': order.id, 'event': 'search' }) }}" method="post">
        <p><a id="submit-search-form" href="#">{{ 'search'|capitalize|trans }}</a></p>
    </form>
</div>

<script type="text/javascript">    
$(document).ready(function () {
    $('#submit-search-form').live('click', function(){
        $('#search-form').submit();
    });
});
</script>