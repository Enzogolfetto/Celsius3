<div id="{{ 'info_'~state }}" class="collapse {{ isCurrent?'in':'' }}">
    <div class="well">
    {% if order.hasState('received') %}
        {% for event in order.getState('received').events %}
        <p>{{ 'Date'|trans }}: {{ event.date|localizeddate() }} <a href="#">{{ 'deliver'|capitalize|trans }}</a></p>
        <p>
            {% for file in order.getFilesForEvent(event) %}
                <a href="{{ path('file_download', { 'id': file.id }) }}">{{ 'Download'|trans }}</a>
            {% endfor %}
        </p>
        {% endfor %}
    {% endif %}
    </div>
</div>

<script type="text/javascript">
$(document).ready(function () {
    $('#submit-receive-form').live('click', function(){
        $('#receive-form').submit();
    });
});
</script>