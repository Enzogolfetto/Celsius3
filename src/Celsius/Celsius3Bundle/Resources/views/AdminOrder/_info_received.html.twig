{% if hasState %}
<div id="{{ 'info_'~state }}" class="collapse {{ isCurrent?'in':'' }}">
    <div class="well">
        {% for event in order.getState(constant('Celsius\\Celsius3Bundle\\Manager\\StateManager::STATE__RECEIVED'), instance).events %}
            {{ render_receive_event(event, order)|raw }}
        {% endfor %}
    </div>
</div>
<script type="text/javascript">
$(document).ready(function () {
    $('.submit-deliver-form').click(function(){
        $(this).parent().submit();
    });
});
</script>
{% endif %}