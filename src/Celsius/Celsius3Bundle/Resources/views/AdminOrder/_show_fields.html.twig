{% extends 'CelsiusCelsius3Bundle:Order:_show_fields.html.twig' %}

{% block statelist %}
<div class="well">
    <ul class="state-list">
        {% for key, state in get_positive_states() %}
            <li>{{ render_state_header(key, document)|raw }}</li>
        {% endfor %}
    </ul>
</div>
<div id="state-info">
    {% for key, state in get_positive_states() %}
        {{ render_state_body(key, document)|raw }}
    {% endfor %}
</div>

<script type="text/javascript">
    // Como no se utiliza accordion-group hay que ocultar "a mano" los elementos
    // mostrados cuando se presiona otro link
    $(document).ready(function(){
        $('.state-list a.pointer').click(function(e){
            $('#state-info .in').collapse('hide');
        });
    });
</script>
{% endblock %}

{% block extrafields %}
<dt>{{ 'Current state'|trans }}</dt>
<dd>{{ document.getCurrentState(instance).type.name|capitalize }}</dd>
<dt>{{ 'User'|trans }}</dt>
<dd><a href="{{ path('admin_user',{ 'id': document.owner.id }) }}">{{ document.owner.username }}</a></dd>
{% endblock %}