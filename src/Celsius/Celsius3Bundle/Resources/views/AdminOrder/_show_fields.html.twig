{% extends 'CelsiusCelsius3Bundle:Order:_show_fields.html.twig' %}

{% block statelist %}
<ul class="state-list well">
    {% for key, state in get_positive_states() %}
    <li>{{ render_state(key, document, extra)|raw }}</li>
    {% endfor %}
</ul>
<div id="state-info">
    {% for key, state in get_positive_states() %}
    {{ render_state_info(key, document, extra)|raw }}
    {% endfor %}
</div>

<script type="text/javascript">
    // Como no se utiliza accordion-group hay que ocultar "a mano" los elementos
    // mostrados cuando se presiona otro link
    $(document).ready(function(){
        $('.state-list a').click(function(e){
            $('#state-info .in').collapse('hide');
        });
    });
</script>
{% endblock %}

{% block extrafields %}
<dt>{{ 'User'|trans }}</dt>
<dd>{{ document.owner.username }}</dd>
{% endblock %}