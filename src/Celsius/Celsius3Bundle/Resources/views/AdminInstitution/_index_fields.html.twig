<div class="sorting-group pull-right">
    <span>
        {{ 'Sort by'|trans }}: 
    </span>
    {% include 'CelsiusCelsius3Bundle:AdminInstitution:_index_sort.html.twig' %}
</div>
<div class="clearfix"></div>
{% for institution in pagination %}
<div id="id{{ institution.id }}" class="accordion">
    <div class="accordion-group">
        <div class="accordion-heading">
            <a href="#collapse{{ institution.id }}" data-parent="#id{{ institution.id }}" data-toggle="collapse" class="accordion-toggle">
                <span>{{ institution.name }}</span>
            </a>
            {% include 'CelsiusCelsius3Bundle:AdminInstitution:_index_list_actions.html.twig' %}
        </div>
        <div class="accordion-body collapse" id="collapse{{ institution.id }}">
            <div class="accordion-inner">
                {% include 'CelsiusCelsius3Bundle:AdminInstitution:_show_fields.html.twig' %}
            </div>
        </div>
    </div>
</div>
{% endfor %}