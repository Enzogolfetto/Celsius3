<div class="sorting-group pull-right">
    <span>
        {{ 'Sort by'|trans }}: 
    </span>
    <ul class="unstyled">
        <li>{{ pagination.sortable('Default'|trans, 'id')|raw }} - </li>
        <li>{{ pagination.sortable('Name'|trans, 'name')|raw }} - </li>
        <li>{{ pagination.sortable('Website'|trans, 'website')|raw }} - </li>
        <li>{{ pagination.sortable('Title'|trans, 'title')|raw }}</li>
    </ul>
</div>
<div class="clearfix"></div>
{% for instance in pagination %}
<div id="id{{ instance.id }}" class="accordion">
    <div class="accordion-group">
        <div class="accordion-heading">
            <a href="#collapse{{ instance.id }}" data-parent="#id{{ instance.id }}" data-toggle="collapse" class="accordion-toggle">
                <span>{{ instance.name }}</span>
            </a>
            <ul class="unstyled pull-right actions">
                <li>
                    <a href="{{ path('instance_show', { 'id': instance.id }) }}"><i class="icon-book"></i> {{ 'Show'|trans }}</a>
                </li>
                <li>
                    <a href="{{ path('instance_edit', { 'id': instance.id }) }}"><i class="icon-pencil"></i> {{ 'Edit'|trans }}</a>
                </li>
                <li>
                    <a href="{{ path('instance_switch', { 'id': instance.id }) }}">
                        {% if instance.enabled %}
                        <i class="icon-remove"></i> {{ 'Disable'|trans }}
                        {% else %}
                        <i class="icon-ok"></i> {{ 'Enable'|trans }}
                        {% endif %}
                    </a>
                </li>
            </ul>
        </div>
        <div class="accordion-body collapse" id="collapse{{ instance.id }}">
            <div class="accordion-inner">
                <dl class="dl-horizontal">
                    <dt>{{ 'Name'|trans }}</dt>
                    <dd>{{ instance.name }}</dd>
                    <dt>{{ 'Abbreviation'|trans }}</dt>
                    <dd>{{ instance.abbreviation }}</dd>
                    <dt>{{ 'Url'|trans }}</dt>
                    <dd>{{ instance.url }}</dd>
                    <dt>{{ 'Title'|trans }}</dt>
                    <dd>{{ instance.title }}</dd>
                    <dt>{{ 'Email'|trans }}</dt>
                    <dd>{{ instance.email }}</dd>
                    <dt>{{ 'Institutions'|trans }}</dt>
                    <dd>Institutions tree</dd>
                </dl>
            </div>
        </div>
    </div>
</div>
{% endfor %}