{% extends 'Celsius3CoreBundle:Layout:layout.html.twig' %}

{% block title %}
{{ instance.hive ~ ' Chat'|trans }}
{% endblock %}

{% block content %}
<h2>{{ instance.hive ~ ' Chat'|trans }}</h2>

<div class="row">
    <div id="conversation" class="col-md-8 well well-sm">
    
    </div>
    <div id="users" class="col-md-3 col-md-offset-1 well well-sm">

    </div>
</div>
<div class="row">
    <div class="col-md-12 input-group">
        <input type="text" class="form-control" id="chat-input" name="chat-input" />
        <span class="input-group-btn">
            <button type="button" class="btn btn-default">{{ 'Send'|trans }}</button>
        </span>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
{% include 'Celsius3ChatBundle:Chat:var.html.twig' %}
<script type="text/javascript" src="{{ asset('bundles/celsius3chat/js/chat.js') }}"></script>
{% endblock %}