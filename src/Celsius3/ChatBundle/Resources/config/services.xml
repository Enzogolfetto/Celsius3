<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="celsius3_chat.wamp_server.class">Celsius3\ChatBundle\Server\Pusher</parameter>
        <parameter key="celsius3_chat.web_socket_server.class">Celsius3\ChatBundle\Server\PusherType</parameter>
        <parameter key="celsius3_chat.entry_point.class">Celsius3\ChatBundle\Server\EntryPoint</parameter>
    </parameters>
    
    <services>
        <service id="celsius3_chat.wamp_server" class="%celsius3_chat.wamp_server.class%">
            <argument type="service" id="doctrine.odm.mongodb.document_manager"></argument>
        </service>
        
        <service id="celsius3_chat.web_socket_server" class="%celsius3_chat.web_socket_server.class%">
            <argument type="service" id="service_container" />
            <argument>%celsius3_chat.web_socket_server.host%</argument>
            <argument>%celsius3_chat.web_socket_server.port%</argument>
        </service>
        
        <service id="celsius3_chat.entry_point" class="%celsius3_chat.entry_point.class%">
            <argument type="service" id="service_container" />
            <argument type="service" id="celsius3_chat.web_socket_server" />
        </service>
    </services>
</container>
