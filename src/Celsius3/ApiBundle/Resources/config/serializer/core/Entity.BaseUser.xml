<?xml version="1.0" encoding="UTF-8" ?>
<serializer>
    <class name="Celsius3\CoreBundle\Entity\BaseUser" exclusion-policy="all">
        <property name="id" type="string" expose="true" read-only="true" groups="Default,current_user"></property>
        <property name="username" type="string" expose="true" access-type="public_method" groups="Default,current_user"></property>
        <property name="email" type="string" expose="true" access-type="public_method" groups="Default,current_user"></property>
        <property name="name" type="string" expose="true" access-type="public_method" groups="Default,current_user"></property>
        <property name="surname" type="string" expose="true" access-type="public_method" groups="Default,current_user"></property>
        <property name="birthdate" type="DateTime" expose="true" access-type="public_method"></property>
        <property name="address" type="string" expose="true" access-type="public_method"></property>
        <property name="enabled" type="boolean" expose="true" access-type="public_method"></property>
        <property name="downloadAuth" type="boolean" expose="true" access-type="public_method"></property>
        <property name="pdf" type="boolean" expose="true" access-type="public_method"></property>
        <property name="institution" type="Celsius3\CoreBundle\Entity\Institution" expose="true" access-type="public_method"></property>
        <property name="customValues" type="array" expose="true" access-type="public_method" read-only="true"></property>
        <property name="roles" type="array" expose="true" access-type="public_method" groups="Default,current_user"></property>
        <virtual-property name="country" type="Celsius3\CoreBundle\Entity\Country" expose="true" method="getCountry"></virtual-property>
        <virtual-property name="city" type="Celsius3\CoreBundle\Entity\City" expose="true" method="getCity"></virtual-property>
        <virtual-property name="isLibrarian" type="boolean" expose="true" method="getIsLibrarian"></virtual-property>
    </class>
</serializer>
