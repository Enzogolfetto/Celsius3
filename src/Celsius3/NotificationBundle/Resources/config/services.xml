<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="celsius3_notification.notification_manager.class">Celsius3\NotificationBundle\Manager\NotificationManager</parameter>
        <parameter key="celsius3_notification.notification_listener.class">Celsius3\NotificationBundle\Listener\NotificationListener</parameter>
    </parameters>

    <services>
        <service id="celsius3_notification.notification_manager" class="%celsius3_notification.notification_manager.class%">
        	<argument type="service" id="service_container"></argument>
        </service>

        <service id="celsius3_notification.notification_listener" class="%celsius3_notification.notification_listener.class%">
            <argument type="service" id="celsius3_notification.notification_manager"></argument>
            <tag name="doctrine_mongodb.odm.event_listener" event="postPersist" />
        </service>
    </services>

</container>
