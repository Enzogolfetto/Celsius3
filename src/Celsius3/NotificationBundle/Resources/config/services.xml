<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="celsius3_notification.notification_manager.class">Celsius3\NotificationBundle\Manager\NotificationManager</parameter>
        <parameter key="celsius3_notification.notification_listener.class">Celsius3\NotificationBundle\Listener\NotificationListener</parameter>
        <parameter key="celsius3_notification.wamp_server.class">Celsius3\NotificationBundle\Server\Pusher</parameter>
        <parameter key="celsius3_notification.web_socket_server.class">Celsius3\NotificationBundle\Server\PusherType</parameter>
        <parameter key="celsius3_notification.entry_point.class">Celsius3\NotificationBundle\Server\EntryPoint</parameter>
    </parameters>

    <services>
        <service id="celsius3_notification.notification_manager" class="%celsius3_notification.notification_manager.class%">
        	<argument type="service" id="service_container"></argument>
        	<argument>%celsius3_notification.web_socket_server.zmq_host%</argument>
            <argument>%celsius3_notification.web_socket_server.zmq_port%</argument>
        </service>

        <service id="celsius3_notification.notification_listener" class="%celsius3_notification.notification_listener.class%">
            <argument type="service" id="celsius3_notification.notification_manager"></argument>
            <tag name="doctrine_mongodb.odm.event_listener" event="postPersist" />
        </service>

        <service id="celsius3_notification.wamp_server" class="%celsius3_notification.wamp_server.class%">
        	<argument type="service" id="celsius3_notification.notification_manager"></argument>
        	<argument type="service" id="doctrine.odm.mongodb.document_manager"></argument>
        </service>

        <service id="celsius3_notification.web_socket_server" class="%celsius3_notification.web_socket_server.class%">
            <argument type="service" id="service_container" />
            <argument>%celsius3_notification.web_socket_server.host%</argument>
            <argument>%celsius3_notification.web_socket_server.port%</argument>
        </service>

        <service id="celsius3_notification.entry_point" class="%celsius3_notification.entry_point.class%">
            <argument type="service" id="celsius3_notification.web_socket_server" />
        </service>
    </services>

</container>
