<div class="sorting-group pull-right">
    <span>
        {{ 'Sort by'|trans }}:
    </span>
    {% include 'Celsius3NotificationBundle:Notification:_index_sort.html.twig' %}
</div>
<div class="clearfix"></div>
{% for notification in pagination %}
<div id="id{{ notification.id }}" class="accordion">
    <div class="accordion-group">
        <div class="accordion-heading">
            <a data-parent="#id{{ notification.id }}" data-toggle="collapse" class="accordion-toggle">
                <span>{{ notification.cause }} - {{ notification.object }}</span>
            </a>
            {% include 'Celsius3NotificationBundle:Notification:_index_list_actions.html.twig' %}
        </div>
    </div>
</div>
{% endfor %}