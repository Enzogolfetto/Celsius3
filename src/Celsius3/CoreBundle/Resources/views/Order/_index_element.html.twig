{% if instance %}
    {% set request = element.request(instance) %}
{% else %}
    {% set request = element.originalRequest %}
{% endif %}
<div class="item_container">

    <div class="top_info">
        <div class="top_left">
            {% if request.type == constant('Celsius3\\CoreBundle\\Manager\\OrderManager::TYPE__SEARCH') %}
                <div class="busqueda">B</div>
            {% else %}
                <div class="provision">P</div>
            {% endif %}
            <div class="tipoarticulo">{{ get_material_type(element.materialData) }}</div>
        </div>

        <div class="top_right">
            <div class="status-{{ request.currentState }}"></div>
            <div class="uri">{{ element.code }}</div>
            <div class="usuario">
                {% if request.operator %}
                    {{ request.operator }}
                {% else %}
                    &nbsp;
                {% endif %}
            </div>
            <div class="decoracion"></div>
        </div>
    </div>

    <div class="main_info">
        <div class="title_and_author">
            <div class="titulo"><a href="{{ path('admin_order_show', { 'id': element.id }) }}">{{ element.materialData.title }}</a></div>
            <div class="autor">{{ element.materialData.authors }}</div>
            <div class="doc_year">{{ element.materialData.year }}</div>
        </div>
        <div class="doc_and_year">
            <div class="doc_type_pdf"></div>
        </div>
    </div>

    <div class="comments">{{ request.comments }}</div>

{% block admin %}{% endblock %}

<div class="clearfix"></div>

</div>
