{% extends 'Celsius3CoreBundle:Layout:directory_layout.html.twig' %}

{% block title %}
{{ 'Directory'|trans }}
{% endblock %}

{% block content %}
<div class="row">
    <div id="description" class="span6">
        {{ directory.get('instance_description').value|raw }}
    </div>
    <div id="news" class="span6">
        <h3>
            {{ 'Latest News'|trans }}
            <a href="{{path('directory_rss_news',{})}}">

                <img src="{{ asset('bundles/celsius3core/images/rss.jpg') }}" height="32" width="32" />
            </a>
            <a href="{{path('directory_atom_news',{})}}">
                <img src="{{ asset('bundles/celsius3core/images/atom.jpg') }}" height="32" width="32" />
            </a>
        </h3>
        {% for news in lastNews %}
            {% include 'Celsius3CoreBundle:Public:_news.html.twig' %}
            {% include 'Celsius3CoreBundle:Public:_news_modal.html.twig' %}
        {% endfor %}
    </div>
</div>
{% endblock %}
