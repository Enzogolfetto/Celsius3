{% extends 'Celsius3CoreBundle:Layout:layout.html.twig' %}

{% block title %}
    {{ 'Login'|trans }}
{% endblock %}

{% block content %}

<div class="panel panel-default">
    <div class="panel-heading"><h3>{{ 'Login'|trans }}</h3>
    </div>

    <div class="panel-body">

    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <form action="{{ path("fos_user_security_check") }}" method="post" class="form" role="form">
                    {% if error %}
                     <div class="alert alert-danger fade in">
                        <a href="#" class="close" data-dismiss="alert">&times;</a>
                            <strong>{{ error.messageKey|trans(error.messageData, 'security') }}</strong>

                        </div>
                 {% endif %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                <div class="form-group">
                    <label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
                    <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" />
                </div>
                <div class="form-group">
                    <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
                    <input type="password" id="password" class="form-control" name="_password" />
                </div>
                <div class="form-group">
                    <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
                    <input type="checkbox" id="remember_me" class="form-control" name="_remember_me" value="on" />
                </div>
                <button type="submit" class="btn btn-primary submit-button"><span class="glyphicon glyphicon-ok"></span> {{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}</button>
                &nbsp;<a href="{{ path("fos_user_resetting_request") }}">{{ 'Forgot your password?'|trans }}</a>
            </form>
        </div>
    </div>
  </div>
 </div>
{% endblock content %}
