{% extends 'Celsius3CoreBundle:Layout:layout.html.twig' %}

{% block title %}
    {{ 'Login'|trans }}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <h2>{{ 'Login'|trans }}</h2>
            <form action="{{ path("celsius3_fos_user_security_check", { 'url': app.request.get('url') }) }}" method="post" class="form" role="form">
                <ul>
                    {% if error %}
                        <li>{{ error|trans }}</li>
                        {% endif %}
                </ul>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                <div class="form-group">
                    <label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
                    <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" />
                </div>
                <div class="form-group">
                    <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
                    <input type="password" id="password" class="form-control" name="_password" />
                </div>
                <div class="form-group">
                    <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
                    <input type="checkbox" id="remember_me" class="form-control" name="_remember_me" value="on" />
                </div>
                <button type="submit" class="btn btn-primary submit-button"><span class="glyphicon glyphicon-ok"></span> {{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}</button>
                &nbsp;<a href="{{ path("fos_user_resetting_request", { 'url': app.request.get('url') }) }}">{{ 'Forgot your password?'|trans }}</a>
            </form>
        </div>
    </div>
{% endblock content %}
