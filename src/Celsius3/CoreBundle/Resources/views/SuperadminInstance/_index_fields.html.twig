<div class="sorting-group pull-right">
    <span>
        {{ 'Sort by'|trans }}: 
    </span>
    {% include 'Celsius3CoreBundle:SuperadminInstance:_index_sort.html.twig' %}
</div>
<div class="clearfix"></div>
{% for instance in pagination %}
<div id="id{{ instance.id }}" class="accordion">
    <div class="accordion-group">
        <div class="accordion-heading {{ (instance.enabled)?'':'disabled-instance' }}">
            <a href="#collapse{{ instance.id }}" data-parent="#id{{ instance.id }}" data-toggle="collapse" class="accordion-toggle">
                <span>{{ instance.name }}</span>
            </a>
            {% include 'Celsius3CoreBundle:SuperadminInstance:_index_list_actions.html.twig' %}
        </div>
        <div class="accordion-body collapse" id="collapse{{ instance.id }}">
            <div class="accordion-inner">
                {% include 'Celsius3CoreBundle:SuperadminInstance:_show_fields.html.twig' %}
            </div>
        </div>
    </div>
</div>
{% endfor %}