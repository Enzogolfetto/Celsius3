<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request form" role="form">
    <div>
        {% if invalid_username is defined %}
            <p>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}, 'FOSUserBundle') }}</p>
        {% endif %}
        <div class="form-group">
            <label for="username">{{ 'resetting.request.username'|trans({}, 'FOSUserBundle') }}</label>
            <input type="text" id="username" class="form-control" name="username" />
        </div>
    </div>
    <button type="submit" class="btn btn-primary submit-button"><span class="glyphicon glyphicon-ok"></span> {{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}</button>
</form>
