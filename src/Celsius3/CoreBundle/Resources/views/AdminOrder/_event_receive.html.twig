{% if isMultiInstance %}
<div id="reclaim-modal{{ event.id }}" class="modal hide" tabindex="-1" role="dialog" aria-labelledby="reclaim-modal-label" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 id="receive-modal-label">{{ 'reclaim'|capitalize|trans }}</h3>
    </div>
    <div class="modal-body">
        <form id="reclaimForm{{ event.id }}" action="{{ path('admin_order_event', { 'id': order.id, 'event': constant('Celsius3\\CoreBundle\\Manager\\EventManager::EVENT__RECLAIM'), 'receive': event.id })|raw }}" method="post" {{ form_enctype(reclaim_form) }} class="form-horizontal">
            {{ form_widget(reclaim_form, {'form_type': 'horizontal'}) }}
        </form>
    </div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">{{ 'Close'|trans }}</button>
        <button class="btn btn-primary doSubmit" value="#reclaimForm{{ event.id }}">{{ 'Save'|trans }}</button>
    </div>
</div>
{% endif %}
<dl class="dl-horizontal">
    <dt>{{ 'Provider'|trans }}</dt>
    <dd>{{ provider.getProviderName() }}</dd>
    <dt>{{ 'Observations'|trans }}</dt>
    <dd>{{ event.observations ? event.observations : '-' }}</dd>
    {% if isMultiInstance %}
    <dt>{{ 'Remote Instance'|trans }}</dt>
    <dd><a href="{{ path('public_index', { 'url': event.instance.url }) }}">{{ event.instance }}</a></dd>
    {% endif %}
    <dt>{{ 'Receive Date'|trans }}</dt>
    <dd>{{ event.date|localizeddate() }} ({{ event.date|time_ago_in_words }}) </dd>
    <dt>{{ 'Files'|trans }}</dt>
    <dd>
        {% for file in order.getFilesForEvent(event) %}
            <a href="{{ path('admin_file_download', { 'order': order.id, 'file': file.id }) }}">{{ 'Download'|trans }}</a>
        {% else %}
            -
        {% endfor %}
    </dd>
    {% if not isDelivered %}
        {% if isMultiInstance and not isApproveEvent %}
        <dt>{{ 'Approve Actions'|trans }}</dt>
        <dd>
            {% if not isReclaimed and not isApproved %}
            <a class="reclaim-link" href="#reclaim-modal{{ event.id }}" role="button" data-toggle="modal">{{ 'reclaim'|capitalize|trans }}</a>
            {% endif %}
            {% if not isApproved %}
            <form action="{{ path('admin_order_event', { 'id': order.id, 'event': constant('Celsius3\\CoreBundle\\Manager\\EventManager::EVENT__APPROVE'), 'receive': event.id }) }}" method="post" class="inline-form">
                <a class="submit-form" href="#">{{ 'approve'|capitalize|trans }}</a>
            </form>
            {% endif %}
        </dd>
        {% else %}
        <dt>{{ 'Receive Actions'|trans }}</dt>
        <dd>
            {% if isApproved %}
            <form action="{{ path('admin_order_event', { 'id': order.id, 'event': constant('Celsius3\\CoreBundle\\Manager\\EventManager::EVENT__DELIVER'), 'receive': event.id }) }}" method="post" class="inline-form">
                <a class="submit-form" href="#">{{ 'deliver'|capitalize|trans }}</a>
            </form>
            {% endif %}
        </dd>
        {% endif %}
    {% endif %}
</dl>