<ul class="unstyled pull-right actions">
    <li>
        <a href="{{ path('superadmin_mails_edit', { 'id': mails.id }) }}"><i class="icon-pencil"></i> {{ 'Edit'|trans }}</a>
    </li>
    
    <li>
        <a href="{{ path('superadmin_mails_change_state', { 'id': mails.id }) }}">
            {% if mails.enabled %}
            <i class="icon-remove"></i> {{ 'Disable'|trans }}
            {% else %}
            <i class="icon-ok"></i> {{ 'Enable'|trans }}
            {% endif %}
        </a>
    </li>
</ul>