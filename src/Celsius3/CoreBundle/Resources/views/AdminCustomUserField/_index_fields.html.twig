<div class="sorting-group pull-right">
    <span>
        {{ 'Sort by'|trans }}: 
    </span>
    {% include 'Celsius3CoreBundle:AdminCountry:_index_sort.html.twig' %}
</div>
<div class="clearfix"></div>
{% for field in pagination %}
<div id="id{{ field.id }}" class="accordion">
    <div class="accordion-group">
        <div class="accordion-heading">
            <a href="#collapse{{ field.id }}" data-parent="#id{{ field.id }}" data-toggle="collapse" class="accordion-toggle">
                <span>{{ field.name }}</span>
            </a>
            {% include 'Celsius3CoreBundle:AdminCustomUserField:_index_list_actions.html.twig' %}
        </div>
        <div class="accordion-body collapse" id="collapse{{ field.id }}">
            <div class="accordion-inner">
                {% include 'Celsius3CoreBundle:AdminCustomUserField:_show_fields.html.twig' %}
            </div>
        </div>
    </div>
</div>
{% endfor %}