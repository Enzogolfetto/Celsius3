<ul class="unstyled pull-right actions">
    {% if not user.enabled %}
    <li>
        <a href="{{ path(name~'_enable', { 'id': user.id }) }}"><i class="icon-ok"></i> {{ 'Enable'|trans }}</a>
    </li>
    {% endif %}
    <li>
        <a href="{{ path(name~'_edit', { 'id': user.id }) }}"><i class="icon-pencil"></i> {{ 'Edit'|trans }}</a>
    </li>
    <li>
        <a href="{{ path(name~'_transform', { 'id': user.id }) }}"><i class="icon-pencil"></i> {{ 'Transform'|trans }}</a>
    </li>
</ul>