<table class="table table-striped table-bordered table-condensed records_list">
    <thead>
        <tr>
            <th>{{ knp_pagination_sortable(pagination, 'Name'|trans, 'name') }}</th>
            <th>{{ knp_pagination_sortable(pagination, 'Surname'|trans, 'surname') }}</th>
            <th>{{ knp_pagination_sortable(pagination, 'Email'|trans, 'email') }}</th>
            <th>{{ 'Actions'|trans }}</th>
        </tr>
    </thead>
    <tbody>
    {% for document in pagination %}
        <tr>
            <td>{{ document.name }}</td>
            <td>{{ document.surname }}</td>
            <td>{{ document.email }}</td>
            <td>
                <ul class="unstyled">
                    <li>
                        <a href="{{ path('contact_show', { 'id': document.id }) }}"><i class="icon-book"></i> {{ 'Show'|trans }}</a>
                    </li>
                    <li>
                        <a href="{{ path('contact_edit', { 'id': document.id }) }}"><i class="icon-pencil"></i> {{ 'Edit'|trans }}</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>