{% form_theme configure_form 'Celsius3CoreBundle:Form:fields.html.twig' %}

<ul class="nav nav-tabs">
    <li class="active"><a id="navegacion-tab" href="#navegacion" data-toggle="tab">{{ 'Información y navegación' | trans }}</a></li>
    <li><a id="visualización-tab" href="#visualización" data-toggle="tab">{{ 'Visualización' | trans }}</a></li>
    <li><a id="comunicación-tab" href="#comunicación" data-toggle="tab">{{ 'Comunicación' | trans }}</a></li>
    <li><a id="otros-tab" href="#otros" data-toggle="tab">{{ 'Otros' | trans }}</a></li>

</ul>

<!-- Tab panes -->
<div class="tab-content">
    <div class="tab-pane active" id="navegacion">
        <br/>
        <div class="row">
            <div class="col-md-12">
                {{ form_row(configure_form.instance_title) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                {{ form_row(configure_form.instance_description) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                {{ form_row(configure_form.instance_information) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                {{ form_row(configure_form.instance_staff) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                {{ form_row(configure_form.default_language) }}
            </div>
        </div>



        <div class="row">
            <div class="col-md-12">
                {{ form_row(configure_form.instance_tagline) }}
            </div>
        </div>



        <div class="row">
            <div class="col-md-12">
                {{ form_row(configure_form.results_per_page) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                {{ form_row(configure_form.show_news) }}
            </div>
        </div>
    </div>


    <div class="tab-pane" id="visualización">
        <br/>
        <div class="row">
            <div class="col-md-12">
                {{ form_row(configure_form.instance_logo) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                {{ form_row(configure_form.instance_css) }}
            </div>
        </div>
    </div>


    <div class="tab-pane" id="comunicación">
        <br/>
        <div class="row">
            <div class="col-md-12">
                {{ form_row(configure_form.email_reply_address) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-8">
                {{ form_row(configure_form.smtp_host) }}
            </div>
            <div class="col-md-2">
                {{ form_row(configure_form.smtp_port) }}
            </div>
            <div class="col-md-2">
                {{ form_row(configure_form.smtp_protocol) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                {{ form_row(configure_form.smtp_username) }}
            </div>
            <div class="col-md-6">
                {{ form_row(configure_form.smtp_password) }}
            </div>
        </div>
        <br/>
        <div><button type="button" id="form_test_connection" name="form[test_connection]" value="test_connection" class="btn btn-default" >
                Test connection
            </button></div>

        <div class="row">
            <div class="col-md-12">
                {{ form_row(configure_form.confirmation_type) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                {{ form_row(configure_form.min_days_for_send_mail) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                {{ form_row(configure_form.max_days_for_send_mail) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                {{ form_row(configure_form.mail_signature) }}
            </div>
        </div>

    </div>
    <div class="tab-pane" id="otros">
        <br/>
        <div class="row">
            <div class="col-md-12">
                {{ form_row(configure_form.api_key) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                {{ form_row(configure_form.download_time) }}
            </div>
        </div>
    </div>
</div>



{{ form_rest(configure_form) }}
