{% extends 'Celsius3CoreBundle:Order:_index_fields.html.twig' %}

{% block extrainfo %}
{% if app.user.username != order.owner.username %}
<dd>{{ order.owner.username }}</dd>
{% endif %}
{% endblock %}

{% block ordercontent %}
{% include 'Celsius3CoreBundle:UserOrder:_index_order_fields.html.twig' %}
<script type="text/javascript">
$(document).ready(function(){
    $('.submit-download-form').click(function(){
        var form = $(this).parent();
        form.submit();
        form.remove();
    });
});
</script>
{% endblock %}