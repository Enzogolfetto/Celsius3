<div class="sorting-group pull-right">
    <span>
        {{ 'Sort by'|trans }}: 
    </span>
    {% include 'Celsius3CoreBundle:AdminNews:_index_sort.html.twig' %}
</div>
<div class="clearfix"></div>
{% for news in pagination %}
<div id="id{{ news.id }}" class="accordion">
    <div class="accordion-group">
        <div class="accordion-heading">
            <a href="#collapse{{ news.id }}" data-parent="#id{{ news.id }}" data-toggle="collapse" class="accordion-toggle">
                <span>{{ news.title }}</span>
            </a>
            {% include 'Celsius3CoreBundle:AdminNews:_index_list_actions.html.twig' %}
        </div>
        <div class="accordion-body collapse" id="collapse{{ news.id }}">
            <div class="accordion-inner">
                {% include 'Celsius3CoreBundle:AdminNews:_show_fields.html.twig' %}
            </div>
        </div>
    </div>
</div>
{% endfor %}