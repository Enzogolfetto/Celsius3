<div class="sorting-group pull-right">
    <span>
        {{ 'Sort by'|trans }}: 
    </span>
    {% include 'Celsius3CoreBundle:SuperadminJournal:_index_sort.html.twig' %}
</div>
<div class="clearfix"></div>
<form class="batch_form" action="{{ path('superadmin_journal_union') }}" method="post">
    {% for journal in pagination %}
    <div id="id{{ journal.id }}" class="accordion">
        <div class="accordion-group">
            <div class="accordion-heading">
                <input type="checkbox" name="element[]" id="element{{ journal.id }}" value="{{ journal.id }}" class="pull-left batch-checkbox"/>
                <a href="#collapse{{ journal.id }}" data-parent="#id{{ journal.id }}" data-toggle="collapse" class="accordion-toggle">
                    <span>{{ journal.name }}</span>
                </a>
                {% include 'Celsius3CoreBundle:SuperadminJournal:_index_list_actions.html.twig' %}
            </div>
            <div class="accordion-body collapse" id="collapse{{ journal.id }}">
                <div class="accordion-inner">
                    {% include 'Celsius3CoreBundle:SuperadminJournal:_show_fields.html.twig' %}
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
</form>