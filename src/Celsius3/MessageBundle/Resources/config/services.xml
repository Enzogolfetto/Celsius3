<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="celsius3_message.custom_recipients_data_transformer.class">Celsius3\MessageBundle\DataTransformer\CustomRecipientsDataTransformer</parameter>
        <parameter key="celsius3_message.new_thread_form.type.custom.class">Celsius3\MessageBundle\FormType\NewThreadMultipleMessageFormType</parameter>
        <parameter key="celsius3_message.reply_form.type.custom.class">Celsius3\MessageBundle\FormType\ReplyMessageFormCustomType</parameter>
        <parameter key="celsius3_message.participant_provider.class">FOS\MessageBundle\Security\ParticipantProvider</parameter>
        <parameter key="celsius3_message.twig.extension.threads.class">Celsius3\MessageBundle\Twig\ThreadExtension</parameter>
        <parameter key="celsius3_message.provider.default.class">Celsius3\MessageBundle\Provider\Provider</parameter>
        <parameter key="celsius3_message.thread_manager.default.class">Celsius3\MessageBundle\DocumentManager\ThreadManager</parameter>
        <parameter key="celsius3_message.recipients_selector.class">Celsius3\MessageBundle\FormType\RecipientsCustomType</parameter>
        <parameter key="celsius3_message.recipients_selector_hidden.class">Celsius3\MessageBundle\FormType\RecipientsHiddenType</parameter>
    </parameters>

    <services>
        <service id="celsius3_message.custom_recipients_data_transformer" class="%celsius3_message.custom_recipients_data_transformer.class%"  public="false">
            <argument type="service" id="fos_user.user_to_username_transformer" />
        </service>

        <service id="celsius3_message.new_thread_form.type.custom" class="%celsius3_message.new_thread_form.type.custom.class%" public="false">
            <argument type="service" id="security.authorization_checker"></argument>
            <argument type="service" id="security.token_storage"></argument>
            <argument type="service" id="doctrine.orm.entity_manager"></argument>
        </service>

        <service id="celsius3_message.reply_form.type.custom" class="%celsius3_message.reply_form.type.custom.class%" public="false" />

        <service id="celsius3_message.participant_provider" class="%celsius3_message.participant_provider.class%">
            <argument type="service" id="security.context" />
        </service>

        <service id="celsius3_message.twig.extension.threads" class="%celsius3_message.twig.extension.threads.class%">
            <argument type="service" id="service_container"></argument>
            <tag name="twig.extension" />
        </service>

        <service id="celsius3_message.provider.default" class="%celsius3_message.provider.default.class%">
            <argument type="service" id="fos_message.thread_manager" />
            <argument type="service" id="fos_message.message_manager" />
            <argument type="service" id="fos_message.thread_reader" />
            <argument type="service" id="fos_message.authorizer" />
            <argument type="service" id="fos_message.participant_provider" />
        </service>

        <service id="celsius3_message.thread_manager.default" class="%celsius3_message.thread_manager.default.class%" public="false">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%fos_message.thread_class%</argument>
            <argument>%fos_message.thread_meta_class%</argument>
            <argument type="service" id="fos_message.message_manager" />
        </service>

        <service id="celsius3_message.recipients_selector" class="%celsius3_message.recipients_selector.class%" public="true">
            <argument type="service" id="celsius3_message.custom_recipients_data_transformer" />
            <tag name="form.type" alias="celsius3_messagebundle_recipients_selector_custom" />
        </service>

        <service id="celsius3_message.recipients_selector_hidden" class="%celsius3_message.recipients_selector_hidden.class%" public="true">
            <argument type="service" id="fos_message.recipients_data_transformer" />
            <tag name="form.type" alias="celsius3_messagebundle_recipients_selector_hidden" />
        </service>
    </services>
</container>
